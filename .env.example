# Mr. MoneyBags Environment Configuration
# ====================================================
# Copy this file to .env and edit before running in production:
#   cp .env.example .env
#   nano .env

# Application Environment
# ----------------------
# Set to 'production' for deployed servers, 'development' for local development
NODE_ENV=production

# Server Configuration
# -------------------
# Port the API server will listen on
PORT=3000

# Security
# --------
# IMPORTANT: Change this to a strong random string in production!
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change-me

# Set to 'true' when running behind a reverse proxy like Nginx
# This ensures cookies and redirects work properly
TRUST_PROXY=true

# Database Connection
# ------------------
# PostgreSQL connection string
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://mrmb_user:strongpassword@localhost:5432/mrmb_db

# Optional: Set SSL mode for PostgreSQL connection
# Common values: disable, require, verify-ca, verify-full
# PGSSLMODE=require

# CORS Configuration
# -----------------
# Comma-separated list of allowed origins for CORS
# Leave empty to only allow same-origin requests
# Example: https://example.com,https://admin.example.com
CORS_ORIGINS=

# Logging
# -------
# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Feature Flags
# ------------
# Enable/disable specific features (true/false)
ENABLE_BANK_SYNC=false
ENABLE_NACHA_EXPORT=true
